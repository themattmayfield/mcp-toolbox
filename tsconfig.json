{
	"compilerOptions": {
		"target": "ES2022",
		"module": "Node16",
		"moduleResolution": "Node16",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"composite": true,
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@mcp-toolbox/shared": ["./packages/shared/src"],
			"@mcp-toolbox/shared/*": ["./packages/shared/src/*"]
		}
	},
	"references": [
		{ "path": "./packages/shared" },
		{ "path": "./packages/weather-server" }
	],
	"files": [],
	"include": [],
	"exclude": ["node_modules", "**/build", "**/dist"]
}
