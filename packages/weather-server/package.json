{
	"name": "@mcp-toolbox/weather-server",
	"version": "2.1.0",
	"description": "MCP server for weather data using the National Weather Service API",
	"type": "module",
	"main": "build/index.js",
	"bin": {
		"weather-mcp-server": "./build/index.js"
	},
	"scripts": {
		"build": "tsc && chmod 755 build/index.js",
		"dev": "bun --watch src/index.ts",
		"start": "bun build/index.js",
		"typecheck": "tsc --noEmit",
		"clean": "rm -rf build"
	},
	"files": [
		"build",
		"README.md"
	],
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/themattmayfield/mcp-toolbox.git",
		"directory": "packages/weather-server"
	},
	"author": "Matt Mayfield",
	"license": "MIT",
	"homepage": "https://github.com/themattmayfield/mcp-toolbox#readme",
	"bugs": {
		"url": "https://github.com/themattmayfield/mcp-toolbox/issues"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.17.2",
		"@mcp-toolbox/shared": "workspace:*",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@types/node": "^24.2.1",
		"typescript": "^5"
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"weather",
		"nws",
		"national-weather-service",
		"forecast",
		"alerts",
		"ai",
		"llm",
		"tools",
		"server",
		"climate",
		"meteorology"
	],
	"engines": {
		"node": ">=18.0.0"
	}
}
