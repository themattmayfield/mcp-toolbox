{
	"name": "@mcp-toolbox/unleash-server",
	"version": "1.0.0",
	"description": "MCP server for managing Unleash feature flags across multiple instances and environments",
	"type": "module",
	"main": "build/index.js",
	"bin": {
		"unleash-server-mcp-server": "./build/index.js",
		"unleash-server-setup": "./build/setup.js"
	},
	"scripts": {
		"build": "tsc && chmod 755 build/index.js && chmod 755 build/setup.js",
		"dev": "bun --watch src/index.ts",
		"start": "bun build/index.js",
		"setup": "bun src/setup.ts",
		"typecheck": "tsc --noEmit",
		"clean": "rm -rf build"
	},
	"files": [
		"build",
		"README.md"
	],
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/themattmayfield/mcp-toolbox.git",
		"directory": "packages/unleash-server"
	},
	"author": "Matt Mayfield",
	"license": "MIT",
	"homepage": "https://github.com/themattmayfield/mcp-toolbox#readme",
	"bugs": {
		"url": "https://github.com/themattmayfield/mcp-toolbox/issues"
	},
	"dependencies": {
		"@mcp-toolbox/shared": "workspace:*",
		"@modelcontextprotocol/sdk": "^1.17.2",
		"@types/inquirer": "^9.0.9",
		"inquirer": "^12.9.1",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@types/node": "^24.2.1",
		"typescript": "^5"
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"unleash",
		"feature-flags",
		"feature-toggles",
		"deployment",
		"configuration",
		"ai",
		"llm",
		"tools",
		"server",
		"devops",
		"release-management"
	],
	"engines": {
		"node": ">=18.0.0"
	}
}
