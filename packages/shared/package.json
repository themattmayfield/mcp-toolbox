{
	"name": "@mcp-toolbox/shared",
	"version": "2.1.0",
	"description": "Shared utilities and types for MCP servers",
	"type": "module",
	"main": "build/index.js",
	"types": "build/index.d.ts",
	"exports": {
		".": {
			"types": "./build/index.d.ts",
			"import": "./build/index.js"
		},
		"./types": {
			"types": "./build/types.d.ts",
			"import": "./build/types.js"
		},
		"./utils": {
			"types": "./build/utils.d.ts",
			"import": "./build/utils.js"
		}
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"typecheck": "tsc --noEmit",
		"clean": "rm -rf build"
	},
	"files": [
		"build",
		"README.md"
	],
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/themattmayfield/mcp-toolbox.git",
		"directory": "packages/shared"
	},
	"author": "Matt Mayfield",
	"license": "MIT",
	"homepage": "https://github.com/themattmayfield/mcp-toolbox#readme",
	"bugs": {
		"url": "https://github.com/themattmayfield/mcp-toolbox/issues"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.17.2",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@types/node": "^24.2.1",
		"typescript": "^5"
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"shared",
		"utilities",
		"types",
		"ai",
		"llm",
		"tools",
		"server",
		"typescript"
	],
	"engines": {
		"node": ">=18.0.0"
	}
}
